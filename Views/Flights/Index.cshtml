@model IEnumerable<GBC_Travel_Group83.Models.Flight>
@{
	ViewData["Title"] = "Flights List";
}

<h2>@ViewData["Title"]</h2>
<table class="table">
	<thead>
		<tr>
			<th>Flight ID</th>
			<th>Airline</th>
			<th>Origin</th>
			<th>Destination</th>
			<th>Departure Time</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var flight in Model)
		{
			<tr>
				<td>@flight.FlightId</td>
				<td>@flight.Airline</td>
				<td>@flight.Origin</td>
				<td>@flight.Destination</td>
				<td>@flight.DepartureTime</td>
				<td>
					<a asp-action="Details" asp-route-id="@flight.FlightId" class="btn btn-info">Details</a>
					<a asp-action="Edit" asp-route-id="@flight.FlightId" class="btn btn-secondary">Edit</a>
					<a asp-action="Delete" asp-route-id="@flight.FlightId" class="btn btn-danger">Delete</a>

				</td>
			</tr>	
		
		}
	</tbody>
</table>

<a asp-action="Create" asp-route-bookingId="@ViewBag.BookingId" class="btn btn-primary">Create New Flight</a>
<a asp-controller="Bookings" asp-action="Index" class="btn btn-secondary">Back to Projects</a>